<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/authhead') %>
</head>
<body>
  <%- include('../partials/authnav') %>
    <div class="container mb-3">

      <h3 class="contentBoxTop mb-3">인증번호 입력</h3>

      <form action="/users" method="post">

        <div class="form-group row">
          <label for="auth" class="col-sm-3 col-form-label">5 digit*</label>
          <div class="col-sm-9">
            <input type="text" id="5digit" name="5digit" value=""
              class="form-control <%= (errors.username)?'is-invalid':'' %>">
            <% if(errors.username){ %>
              <span class="invalid-feedback">
                <%= errors.username.message %>
              </span>
              <% } %>
          </div>
        </div>

        <div class="form-group">

          <input type="button" onclick="authChecker()" value="확인" class="btn btn-primary">
          <script>

            function authChecker() {
              var cellParent;
              //입력번호 전달 됨
              cellParent = opener.document.getElementById("cellnum").value;
              //document.getElementById("5digit").value = opener.document.getElementById("cellnum").value;
              alert("auth result = " + cellParent);
              var isAuth = true;

              if (isAuth == true) {
                window.opener.location.href = "/users/new";
                window.close();
              }
              else {
                window.opener.location.href = "/users/auth";
              }
            }

          </script>

          <input type="button" onclick="test1()" value="취소" class="btn btn-primary">
          <script>
            function test1() {
              window.close();
            }
          </script>

        </div>
      </form>
    </div>
</body>

</html>